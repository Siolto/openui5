<mvc:View
	controllerName="sap.f.cardsdemo.controller.Footer"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">
	<Page title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer />
				<Title text="Footer (experimental)" />
				<ToolbarSpacer />
			</Toolbar>
		</subHeader>

		<SegmentedButton
			id="sizeSwitch"
			selectedKey="cozy"
			selectionChange=".onFormFactorChange"
			class="VizTestDensityBtn sapUiSmallMargin">
			<items>
				<SegmentedButtonItem text="Cozy" key="cozy" />
				<SegmentedButtonItem text="Compact" key="compact" />
			</items>
		</SegmentedButton>

		<Panel>
			<f:GridContainer>
				<w:Card id="card1" manifest="{cardsPlayground>/playgroundBaseUrl}/cardcontent/footer/card.json">
					<w:layoutData>
						<f:GridContainerItemLayoutData columns="5" />
					</w:layoutData>
				</w:Card>
			</f:GridContainer>
		</Panel>
	</Page>
</mvc:View>