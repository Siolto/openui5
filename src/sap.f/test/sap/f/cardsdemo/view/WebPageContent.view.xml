<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true"
	controllerName="sap.f.cardsdemo.controller.WebPageContent">
	<Page title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="WebPage Content Card"/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<SegmentedButton
			selectedKey="cozy"
			selectionChange=".onFormFactorChange"
			class="VizTestDensityBtn sapUiSmallMargin">
			<items>
				<SegmentedButtonItem text="Cozy" key="cozy" />
				<SegmentedButtonItem text="Compact" key="compact" />
			</items>
		</SegmentedButton>

		<f:GridContainer class="sapUiSmallMargin">
			<w:Card
				id="webPageCardLocal"
				manifest="{cardsPlayground>/playgroundBaseUrl}/cardcontent/webPageError/manifest.json"
				height="auto"
				class="sapUiMediumMarginEnd">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="6" />
				</w:layoutData>
			</w:Card>
			<w:Card
				manifest="{cardsPlayground>/playgroundBaseUrl}/cardcontent/webPage/manifest.json"
				height="auto"
				class="sapUiMediumMarginEnd">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="6" />
				</w:layoutData>
			</w:Card>
		</f:GridContainer>
	</Page>
</mvc:View>